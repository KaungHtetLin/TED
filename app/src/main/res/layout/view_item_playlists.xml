<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardElevation="@dimen/cardview_default_elevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/iv_playlists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/image_foreground"
            android:scaleType="centerCrop"
            android:src="@drawable/playlists_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_playlists_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_playlists_talk_count"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:paddingLeft="@dimen/margin_medium"
                android:text="Why not walk it out?"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_playlists_talk_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:text="7 talks"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular" />

            <View
                android:id="@+id/v_horizontal"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_playlists_talk_count"
                android:layout_alignBottom="@id/tv_playlists_talk_count"
                android:layout_toRightOf="@id/tv_playlists_talk_count"
                android:background="@color/pure_white"
                android:layout_marginBottom="@dimen/margin_medium"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium" />

            <TextView
                android:id="@+id/tv_playlists_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_playlists_talk_count"
                android:layout_toRightOf="@id/v_horizontal"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:text="1:12:27"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular" />

            <ImageView
                android:id="@+id/iv_playlists_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_medium"
                android:src="@drawable/ic_more_vert_24dp" />

        </RelativeLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>