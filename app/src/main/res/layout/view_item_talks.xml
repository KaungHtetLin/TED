<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    app:cardElevation="@dimen/cardview_default_elevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_talks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/talks_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_talks_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_talks_title"
                android:layout_alignParentStart="true"
                android:foreground="@color/image_foreground"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Wendy Woods"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular" />

            <TextView
                android:id="@+id/tv_talks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/margin_xxlarge"
                android:paddingBottom="@dimen/margin_medium_2"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="The business benefits of doing good"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_talks_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_time"
                android:layout_alignParentEnd="true"
                android:paddingRight="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:src="@drawable/ic_more_vert_24dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/margin_medium_2"
                android:paddingRight="@dimen/margin_medium"
                android:text="15:35"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/text_regular" />

        </RelativeLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>